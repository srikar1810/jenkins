<project name="Salesforce Ant Build" default="validate" basedir="." xmlns:sf="antlib:com.salesforce">

    <property file="build.properties"/>
    <property environment="env"/>

    <target name="validate">
        <sf:deploy 
            username="${sf.username}" 
            password="${sf.password}" 
            serverurl="${sf.serverurl}" 
            deployRoot="src" 
            runAllTests="true" 
            checkOnly="true"/>
    </target>

</project>
